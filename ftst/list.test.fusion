//==========================================================================
// append_m

(define test_append_m
  (lambda (v0)
    (let [(mutable (is_mutable_list v0)),
          (stretchy (is_stretchy_list v0)),
          (v1 (append_m v0 [1]))]
      (test_predicates v1 mutable stretchy)
      (if stretchy
        (check_equal v0 [1] "v0 should be modified")
        (check_equal v0 []  "v0 not modified"))
      (check_equal v1 [1] "v1")
      (let ((v2 (append_m v1 (stretchy_list 2 3) (mutable_list 4))))
        (test_predicates v2 mutable stretchy)
        (if stretchy
          (begin
            (check_equal v0 [1, 2, 3, 4] "v0 should be modified")
            (check_equal v1 [1, 2, 3, 4] "v1 should be modified")
            )
          (begin
            (check_equal v0 []  "v0 not modified")
            (check_equal v1 [1] "v1 not modified")))
        (check_equal v2 [1, 2, 3, 4] "v2")))))

(test_append_m [])
(test_append_m (list))
(test_append_m (mutable_list))
(test_append_m (stretchy_list))

(check_equal (append_m null.list [1] null.list)
  [1] "append w/ null target")
(check_equal (append_m [1] null.list)
  [1] "append w/ null arg")


(check_equal (append_m (quote a::null.list))
  (quote a::null.list) "annotated append 1")
(check_equal (append_m (quote a::null.list) (quote b::[c::2]))
  (quote a::[c::2]) "annotated append 2")

(check_equal (append_m (quote a::[1]))
  (quote a::[1]) "annotated append 1")
(check_equal (append_m (quote a::[1]) (quote b::[c::2]))
  (quote a::[1,c::2]) "annotated append 2")

