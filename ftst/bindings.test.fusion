//==========================================================================
// lets

(check = (lets [] 225) 225)
(check = (lets [(x 226)] x) 226)

(check =
  (let [(x 5)]
    (lets [(x 19), (y (+ x 222))] y))
  (+ 19 222))

(check =
  (lets [(x 19), (y (+ x 222))] y)
  (+ 19 222))


